<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/intense_background"
    android:padding="24dp"
    tools:context=".ProfileFragment">

    <TextView
        android:id="@+id/profileHeaderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil Pengguna"
        android:textColor="@color/intense_text_primary"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toTopOf="@+id/usernameLabelTextView"/>

    <TextView
        android:id="@+id/usernameLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Username Anda:"
        android:textColor="@color/intense_text_secondary"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/profileHeaderTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/usernameValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="NamaPenggunaContoh"
        android:textColor="@color/intense_text_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/usernameLabelTextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/usernameLabelTextView" />

    <Button
        android:id="@+id/changeCredentialsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/intense_text_primary"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Ubah Username / Password"
        android:textColor="@color/intense_background"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/usernameLabelTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/intense_text_secondary"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Logout"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/changeCredentialsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>